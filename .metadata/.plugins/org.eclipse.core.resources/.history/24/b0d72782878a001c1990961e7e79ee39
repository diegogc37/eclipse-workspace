package programacion_main;

import java.util.Scanner;

import herencia.mamiferos.Elefante;
import herencia.mamiferos.Gato;
import herencia.mamiferos.Ornitorrinco;

public class Main {

	public Main() {
		menu();
	}
	
	public void menu(){
		Scanner t = new Scanner(System.in);
		int opcion = 0;
		do {
			System.out.println("---------------------------------------------------------------------");
			System.out.println("Introduce una opcion: ");
			System.out.println("\t 1) Elefante.");
			System.out.println("\t 2) Ornitorrinco.");
			System.out.println("\t 3) Gato.");
			System.out.println("***");
			System.out.println("\t 0) Salir.");
			opcion = t.nextInt();
			System.out.println("---------------------------------------------------------------------");
			switch(opcion) {
			case 1:
				Elefante e=new Elefante(100,200);
				e.emitirRuido();
				break;
			case 2:
				Ornitorrinco o= new Ornitorrinco(15,30);
				o.emitirRuido();
				break;
			case 3:
				Gato g=new Gato("Pepe",10,20);
				g.emitirRuido();
				break;
			case 0:
				System.out.println("Apagando el sistema....3...2...1...");
				break;
			default:
				break;
			}
			
		}while(opcion!=0);
		t.close();
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Main m=new Main();
	}

}
