package calculadora;

import debug.Debug;

public class Calculadora {

	public static int sumar(int a, int b) {
		int suma = a + b;
		Debug.imprimirMensaje(suma);
		return suma;
	}
	
	public static double sumar(double a, double b) {
		double suma = a + b;
		Debug.imprimirMensaje(suma);
		return suma;
	}
	
	public static int restar(int a, int b) {
		int restar = a - b;
		Debug.imprimirMensaje(restar);
		return restar;
	}
	
	public static double restar(double a, double b) {
		double restar = a - b;
		Debug.imprimirMensaje(restar);
		return restar;
	}
	
	public static int multiplicar(int a, int b) {
		int multiplicaion = a * b;
		Debug.imprimirMensaje(Integer.toString(multiplicaion));
		return multiplicaion;
	}
	
	public static double multiplicar(double a, double b) {
		double multiplicaion = a * b;
		Debug.imprimirMensaje(Double.toString(multiplicaion));
		return multiplicaion;
	}

	public static int dividir(int a, int b) {
		int division=0;
		if (b!=0) {
			division = a / b;
		}
		Debug.imprimirMensaje(division);
		return division;
	}
	
	public static double dividir(double a, double b) {
		double division = a * b;
		if (b!=0) {
			division = a / b;
		}
		Debug.imprimirMensaje(division);
		return division;
	}
	
}
